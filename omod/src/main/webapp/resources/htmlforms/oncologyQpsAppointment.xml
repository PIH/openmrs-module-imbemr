    <section id="oncologyQpsAppointment" sectionTag="section" headerStyle="title" headerCode="Schedule Oncology Appointment">

        <fieldset class="required">
            <legend>
                <uimessage code="Encounter Date"/>
            </legend>
            <h3>
                <uimessage code="Encounter Date"/>
            </h3>

            <p class="left">
                <encounterDate id="encounterDate" showTime="false" default="now"/>
            </p>
        </fieldset>

        <fieldset class="required">
            <legend>
                <uimessage code="Provider"/>
            </legend>
            <h3>
                <uimessage code="Oncology Provider"/>
            </h3>

            <p class="left">

                <encounterProvider default="currentUser" role="Oncology Provider" />
            </p>
        </fieldset>

        <fieldset class="required">
            <legend>
                <uimessage code="Location"/>
            </legend>
            <h3>
                <uimessage code="Location"/>
            </h3>

            <p class="left">
                <encounterLocation required="true" default="Butaro Hospital"/>
            </p>
        </fieldset>


        <fieldset class="required comunicate-pathology-results-question">
            <legend>
                <uimessage code="Communicate pathology results"/>
            </legend>
            <h3>
                <uimessage code="Communicate pathology results"/>
            </h3>

            <p class="left">
                <obs conceptId="56001c5f-1a8a-4d80-b255-d1de983a852e" id="communicatePathologyResults" showUnits="false"
                     unitsCssClass="append-to-value" style="dropdown" size="9" required="true">
