<htmlform formUuid="19d0f920-aaac-11e4-bcd8-0800200c9a66" formName="Oncology App QPS" formEncounterType="ff319885-3f20-4ae5-8663-3ad5678cba41" formVersion="1.0">

    <macros> paperFormId =
        Flow-DM-RW.V2.0.akb.15May09 headerColor =#009d8e fontOnHeaderColor =
        white </macros>
    <style>
        <style>

            .encounter-summary-container {
            font-size: 1em;
            font-weight: normal;
            }
        </style>

    </style>

    <script type="text/javascript">
        jq(function() {

        // hack to make the datepicker show when the form is opened
        getField('encounterDate.value').datepicker('show');

